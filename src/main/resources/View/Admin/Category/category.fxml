<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Admin.Category.categoryController">
    <BorderPane.margin>
        <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
    </BorderPane.margin>
    <children>
        <HBox fx:id="functional" alignment="CENTER" prefHeight="47.0" spacing="100.0">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="box-button">
                    <children>
                        <Button fx:id="selectAll" mnemonicParsing="false" text="Select All" styleClass="functional-buttons"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="box-button">
                    <children>
                        <Button fx:id="add" mnemonicParsing="false" onAction="#BtnAddOnAction" text="Add" styleClass="functional-buttons" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="box-button">
                    <children>
                        <Button fx:id="reloadBtn" mnemonicParsing="false" onAction="#ReloadOnAction" text="Reload" styleClass="functional-buttons" />
                    </children>
                </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="box-button">
               <children>
                  <Button fx:id="multipleBtn" mnemonicParsing="false" onAction="#handleMultipleDelete" text="Multiple Delete" styleClass="functional-buttons" />
               </children>
            </HBox>
            </children>
        </HBox>
        <TableView fx:id="categoryTable" prefWidth="422.0">
            <columns>
                <TableColumn fx:id="selectColumn" prefWidth="129.0" text="Select" />
                <TableColumn fx:id="idColumn" prefWidth="234.0" text="ID" />
                <TableColumn fx:id="categoryNameColumn" prefWidth="187.0" text="Category Name" />
                <TableColumn fx:id="created_timeColumn" prefWidth="187.0" text="Created time" />
                <TableColumn fx:id="actionColumn" prefWidth="130.0" text="Action" />
            </columns>
        </TableView>
    </children>
</VBox>
