<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="productListContainer" prefHeight="700.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Client.Payment.paymentController2">
   <children>
      <HBox prefHeight="718.0" prefWidth="1280.0">
         <children>
            <VBox prefHeight="700.0" prefWidth="808.0">
               <children>
                  <Label prefHeight="36.0" prefWidth="173.0" text="Select Payment Method" />
                  <HBox prefHeight="44.0" prefWidth="808.0">
                     <children>
                        <Button mnemonicParsing="false" text="VNPay" onMouseClicked="#VNPAYOnAction"/>
                        <Button mnemonicParsing="false" text="Cash" />
                     </children>
                  </HBox>
                  <VBox fx:id="paymentMethodArea" prefHeight="625.0" prefWidth="808.0" />
               </children>
            </VBox>
            <VBox prefHeight="700.0" prefWidth="471.0">
               <children>
                  <Label prefHeight="32.0" prefWidth="99.0" text="Order Summary" />
                  <ScrollPane prefHeight="384.0" prefWidth="471.0">
                     <content>
                        <TilePane fx:id="paymentItemContainer" prefHeight="382.0" prefWidth="470.0" />
                     </content>
                  </ScrollPane>
                  <HBox prefHeight="36.0" prefWidth="471.0">
                     <children>
                        <Label text="Purchase Date" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="Label" />
                     </children>
                  </HBox>
                  <HBox prefHeight="36.0" prefWidth="471.0">
                     <children>
                        <Label text="Invoice" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="Label" />
                     </children>
                  </HBox>
                  <Pane prefHeight="1.0" prefWidth="200.0" />
                  <HBox prefHeight="38.0" prefWidth="471.0">
                     <children>
                        <Label text="Discount" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="Label" />
                     </children>
                  </HBox>
                  <HBox prefHeight="38.0" prefWidth="471.0">
                     <children>
                        <Label text="Subtotal" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="Label" />
                     </children>
                  </HBox>
                  <Pane prefHeight="1.0" prefWidth="200.0" />
                  <HBox prefHeight="38.0" prefWidth="471.0">
                     <children>
                        <Label text="Total" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="lbTotal" text="Label" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
