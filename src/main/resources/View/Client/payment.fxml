<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="productListContainer" prefHeight="700.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Client.Payment.paymentController">
    <children>
        <Label text="    Thanh Toán">
            <font>
                <Font size="22.0" />
            </font>
        </Label>
        <Label text="       Địa chỉ nhận hàng">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label fx:id="address" text="         ">
         <VBox.margin>
            <Insets left="30.0" />
         </VBox.margin></Label>
        <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="menu-background">
            <content>
                <TilePane fx:id="paymentItemContainer" prefHeight="500.0" prefWidth="1280.0" />
            </content>
        </ScrollPane>
        <HBox prefHeight="136.0" prefWidth="1280.0">
            <children>
                <VBox prefHeight="134.0" prefWidth="54.0" />
                <VBox prefHeight="100.0" prefWidth="264.0">
                    <children>
                        <HBox prefHeight="30.0" prefWidth="264.0">
                            <children>
                                <Label text="Phương thức thanh toán" />
                            </children>
                        </HBox>
                        <HBox prefHeight="35.0" prefWidth="264.0">
                            <children>
                                <Label text="Cash               " />
                                <RadioButton fx:id="cash" mnemonicParsing="false" />
                            </children>
                        </HBox>
                        <HBox prefHeight="27.0" prefWidth="264.0">
                            <children>
                                <Label text="VNPay            " />
                                <RadioButton fx:id="vnpay" mnemonicParsing="false" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox prefHeight="100.0" prefWidth="292.0">
                    <children>
                        <HBox prefHeight="24.0" prefWidth="292.0" />
                        <HBox prefHeight="27.0" prefWidth="292.0">
                            <children>
                                <Label fx:id="lbtien" />
                            </children>
                        </HBox>
                        <Button mnemonicParsing="false" onAction="#acceptPay" text="Xác nhận thanh toán" styleClass="buy-now"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
