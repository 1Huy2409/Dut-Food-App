<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.StackPane?>
<VBox fx:id="productListContainer" prefHeight="700.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Client.Payment.paymentController">
    <children>
        <HBox prefHeight="718.0" prefWidth="1280.0">
            <children>
                <VBox prefHeight="701.0" prefWidth="400.0" minWidth="400.0" maxWidth="400.0">
                    <children>
                        <Label prefHeight="36.0" prefWidth="300.0" text="Select Payment Method" style="-fx-font-weight: bold; -fx-font-size: 20px;"/>
                        <HBox prefHeight="44.0" prefWidth="808.0" spacing="20">
                            <children>
                                <Button fx:id="btnVnpay" mnemonicParsing="false" onMouseClicked="#VNPAYOnAction" text="VNPay" styleClass="selected-category"/>
                                <Button fx:id="btnCash" mnemonicParsing="false" text="Cash" styleClass="unselected-category" onMouseClicked="#CASHOnAction"/>
                            </children>
                        </HBox>
                        <VBox fx:id="paymentMethodArea" alignment="CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
                <VBox  HBox.hgrow="ALWAYS" styleClass="container-payment">
                    <children>
                        <Label prefHeight="32.0" prefWidth="200.0" text="Order Summary" style="-fx-font-weight: bold; -fx-font-size: 20px;"/>
                        <ScrollPane VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" styleClass="menu-background">
                            <content>
                                <StackPane alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                                    <TilePane fx:id="paymentItemContainer" prefWidth="800" prefHeight="400" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" alignment="TOP_CENTER" />
                                </StackPane>
                            </content>
                        </ScrollPane>
                        <HBox prefHeight="36.0" prefWidth="471.0">
                            <children>
                                <Label text="Address" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label fx:id="lbAddress" text="Label" />
                            </children>
                        </HBox>
                        <HBox prefHeight="36.0" prefWidth="471.0">
                            <children>
                                <Label text="Invoice" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label text="Label" />
                            </children>
                        </HBox>
                        <Pane prefHeight="1.0" prefWidth="200.0" />
                        <HBox prefHeight="38.0" prefWidth="471.0">
                            <children>
                                <Label text="Discount" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label text="Label" />
                            </children>
                        </HBox>
                        <HBox prefHeight="38.0" prefWidth="471.0">
                            <children>
                                <Label text="Subtotal" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label text="Label" />
                            </children>
                        </HBox>
                        <Pane prefHeight="1.0" prefWidth="200.0" />
                        <HBox prefHeight="38.0" prefWidth="471.0">
                            <children>
                                <Label text="Total" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label fx:id="lbTotal" text="Label" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
