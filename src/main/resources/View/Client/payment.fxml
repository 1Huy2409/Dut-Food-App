<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="productListContainer" prefHeight="700.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Client.Payment.paymentController">
   <children>
      <Label text="Thanh Toán">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label text="Địa chỉ nhận hàng">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="address" />
      <ScrollPane prefHeight="500.0" prefWidth="1280.0">
         <content>
            <TilePane fx:id="paymentItemContainer" prefHeight="500.0" prefWidth="1280.0" />
         </content>
      </ScrollPane>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox prefHeight="100.0" prefWidth="126.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#acceptPay" text="Xác nhận thanh toán" />
                  <Label fx:id="lbtien" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
